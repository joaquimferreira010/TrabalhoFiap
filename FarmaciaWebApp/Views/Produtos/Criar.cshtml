@{
    ViewData["Title"] = "Cadastrar Produto";
}
<div class="text-center">

    <h1 class="display-4">Cadastrar Produto</h1>
    

</div>
<form>
      <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do produto">        
      </div>
      <br />
      <div class="form-group">
        <label for="Quantidade">Quantidade</label>
        <input type="number" class="form-control" placeholder="Digite a quantidade">
      </div>
      <br />
      <div class="form-group">
        <label for="Preco">Preço</label>
        <input type="number" class="form-control" placeholder="Digite o Preço">
      </div>
      <br />
      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Adicionar</button>
        <a class="btn btn-secondary" asp-controller="Produtos" asp-action="Index" role="button">Voltar</a>
      </div>
      
</form>


